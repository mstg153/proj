    <body>
        <br><br>
        <form action="../../users/updateexp" method="post">
            <input type="hidden" name="id" value= "<%=exp._id%>"  required>
            
            <label for="Student_Name">1. Enter Your Name</label>
            <input type="text" name="Student_Name" value= "<%=exp.Student_Name%>"  required><br>
            
            <label for="cgpa">2. Enter Your CGPA/percentage</label>
            <input type="text" name="cgpa" value="<%=exp.cgpa%>" required><br>
            
            <label for="Student_Roll">3. Enter Your Enrollment Number</label>
            <input type="number" name="Student_Roll" value="<%=exp.Student_Roll%>"  required><br>
            
            <label for="department">4.1 Enter Your Department</label>
            <!-- <textarea name="department" value= <%= user.department%> readonly cols="40" rows="1"></textarea><br> -->
            
            <input type="text" name="department" value= "<%=exp.department%>"  size="50" required><br>

            <label for="yearofGraduation">4.2 Enter Your Year Of graduation</label>
            <input type="text" name="yearofGraduation" value= "<%=exp.yearofGraduation%>"  required><br>

            <label for="Company_Name">5. Enter Company Name</label>
            <input type="text" name="Company_Name" value="<%=exp.Company_Name%>" required><br>
            
            <label for="applied_role">6.1 Role Applied for?</label>
            <input type="text" name="applied_role" value="<%=exp.applied_role%>" required><br>
            
            <label for="ctc">6.2 CTC</label>
            <input type="text" name="ctc" value="<%=exp.ctc%>" required><br>

